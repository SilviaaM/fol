/* ========================================================================= */
/* Semantics for first order logic.                                          */
/* ========================================================================= */

sig fol.

kind term, form type.

/* ------------------------------------------------------------------------- */
/* Formulas.                                                                 */
/* ------------------------------------------------------------------------- */

type truth, false form.
type neg form -> form. 
type and, or, imp, iff form -> form -> form.
type forall, exists (term -> form) -> form.

/* ------------------------------------------------------------------------- */
/* Evaluation and validity.                                                  */
/* ------------------------------------------------------------------------- */

type domain A -> o.
type termval term -> A -> o.
type holds form -> o.

end
