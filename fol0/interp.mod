/* ========================================================================= */
/* Interpretation of fol in arith3 (domain, fol, arith3).                    */
/* ========================================================================= */

module interp.

accumulate fol, arith3.

/* ------------------------------------------------------------------------- */
/* Term evaluation.                                                          */
/* ------------------------------------------------------------------------- */

termval zero 0.
termval one 1.
termval two 2.
termval (add X Y) P :- termval X M, termval Y N, add3 M N P.

/* ------------------------------------------------------------------------- */
/* Interpretation of predicates.                                             */
/* ------------------------------------------------------------------------- */

holds (eq X Y) :- termval X M, termval Y N, M = N.

end
